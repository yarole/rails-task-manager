<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>  <%= link_to content_tag(:i, '', class: 'fas fa-trash-alt'),
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>
<p><%= link_to "Add new task", new_task_path(@tasks) %></p>
